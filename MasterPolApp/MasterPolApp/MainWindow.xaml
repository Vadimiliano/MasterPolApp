<Window x:Class="MasterPolApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MasterPolApp"
        mc:Ignorable="d"
        Title="MasterPol" Height="600" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#F4E8D3">
            <TextBlock Text="Мастер пол"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontFamily="Segoe UI"
                       FontSize="30"
                       FontWeight="Bold"></TextBlock>
            <Image Source="/Res/Мастер пол.png"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   Margin="320,5,0,5"></Image>
        </Grid>

        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"
               VerticalAlignment="Center" HorizontalAlignment="Center"
               Grid.Row="1"></Frame>
        
    </Grid>
</Window>
